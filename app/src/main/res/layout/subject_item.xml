<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    tools:ignore="ContentDescription">

    <android.support.v7.widget.CardView
        android:id="@+id/subjectIconMask"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp" >

        <ImageView
            android:id="@+id/subjectIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/subjectGradeSelector"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/subjectGradeMinus"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/minus" />

        <TextView
            android:id="@+id/subjectGradeValue"
            android:layout_toEndOf="@id/subjectGradeMinus"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="@string/default_grade"
            style="@style/SubjectGrade" />

        <ImageView
            android:id="@+id/subjectGradePlus"
            android:layout_toEndOf="@id/subjectGradeValue"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/plus" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/subjectIconMask"
        android:layout_toStartOf="@id/subjectGradeSelector"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/subjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            style="@style/SubjectName" />

        <TextView
            android:id="@+id/subjectUnits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subjectName"
            android:layout_marginStart="16dp"
            style="@style/SubjectUnits" />

    </RelativeLayout>

</RelativeLayout>