<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/darkSyp</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightSyp</item>
        <item name="colorPrimaryDark">@color/darkSyp</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/darkSyp</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/darkSyp</item>
        <item name="android:actionBarStyle">@style/MainTheme.Bar</item>
    </style>

    <style name="MainTheme.Bar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/lightSyp</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <style name="MainTheme.Bar.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="SubjectDesc">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SubjectGrade">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/darkGrade7</item>
    </style>

</resources>
