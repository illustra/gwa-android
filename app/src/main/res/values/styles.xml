<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorDefaultDark</item>
        <item name="colorAccent">@color/colorGrade7</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/colorGrade7</item>
        <item name="android:spinnerItemStyle">@style/LevelChooser</item>
    </style>

    <style name="LevelChooser">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorDefaultDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubjectName">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SubjectUnits">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SubjectGrade">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGrade7</item>
    </style>

</resources>
